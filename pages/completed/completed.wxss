.page{
  height: 100%;
}
.btn {
  background-color: #fff;
}
.order_mian {
  margin-bottom: 100rpx;
  height: 92%;
  position: fixed;
  width: 100%;
  overflow: scroll;
  border: 1px solid #cccccc;
  background-color: #fafafa;
}
.content {
  height: 80%;
}
.order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  color: #666;
}

.order_no_row {
  display: flex;
  padding: 20rpx 0;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.order_price_row {
  display: flex;
  padding: 20px 0;
  justify-content: space-between;
}

.order_price_value {
  color: var(--themeColor);
  font-size: 40rpx;
}

.order_time_row {
  display: flex;
  padding: 20rpx 0;
  justify-content: space-between;
}
.btnStyle {
  position: fixed;
  bottom: 0;
  width: 100%;
}
.btnStyle1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 20%;
}