
.logo{
    display: flex;
    justify-content: center;
    align-items: center;
}
image{
    margin-top: 100rpx;
    height: 500rpx;
    width: 500rpx;
}
button{

    margin-top: 200rpx;
    width: 80%;
}
.row {
    margin: 0 auto;
    padding: 60px 30px;
    background: #032429;
    text-align: center;
}

.row span {
    position: relative;
    display: inline-block;
    margin: 30rpx 10rpx;
}

.gate {
    display: inline-block;
    width: 500rpx;
    padding: 10px 0 10px 15px;
    font-family: "Open Sans", sans;
    font-weight: 400;
    color: #377D6A;
    background: #efefef;
    border: 0;
    border-radius: 3px;
    outline: 0;
    text-indent: 65px;
    transition: all 0.1s ease-in-out;
}

.gate+label {
    display: inline-block;
    position: absolute;
    top: 0;
    left: 0;
    padding: 22rpx 30rpx;
    text-shadow: 0 1px 0 rgba(19, 74, 70, 0.4);
    background: #7AB893;
    transition: all 0.4s ease-in-out;
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    transform-origin: left bottom;
    z-index: 99;
}

.gate+label:before,
.gate+label:after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    border-radius: 10rpx;
    background: #377D6A;
    transform-origin: left bottom;
    transition: all 0.4s ease-in-out;
    pointer-events: none;
    z-index: -1;
}


.gate:focus,
.gate:active {
    color: #377D6A;
    text-indent: 0;
    background: #fff;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.gate:focus::-webkit-input-placeholder,
.gate:active::-webkit-input-placeholder {
    color: #aaa;
}

.gate:focus+label,
.gate:active+label {
    transform: rotate(-66deg);
    border-radius: 10rpx;
}